<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Manage Program  &nbsp; <button class="btn btn-sm btn-info" id="btnAddprm">+ Add New</button></h4>

        </div>
        <div class="card-body">
            <table class="table table-bordered" id="tblprogram">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Program Name</td>
                        <td>Path</td>
                        <td>Description</td>
                        <td>Display_Sequence</td>
                        <td>Status</td>
                        <td>Action</td>
                       

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


<!--modal for action hisotry-->
<div class="modal fade" id="modalAddprm">
    <div class="modal-dialog">
        <div class="modal-content" style="width:52pc; margin-left:-189px">
            <div class="modal-header">
                <h4 class="modal-title">Add New Program</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <input type="hidden" class="form-control" id="hdnprmId" value="0" />
                        <div class="form-group" id="formGroupUserName">
                            <label>Program Name <span class="mandatory">*</span></label>
                            <input type="text" class="form-control" id="txtProgram" />
                            <span id="errProgram"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group" id="formGroupEmailAddress">
                            <label>Path <span class="mandatory">*</span></label>
                            <input type="text" class="form-control" id="txtPath" />
                            <span id="errPath"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div class="form-group" id="formGroupMobileNumber">
                            <label>Description</label>
                            <input type="text" class="form-control" id="txtDescription" />
                            <span id="errDescription"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group" id="formGroupManager">
                            <label>Display_Sequence</label>
                            <input type="number" class="form-control" id="txtDisplay_Sequence" />
                            <span id="errDisplay_Sequence"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div class="form-group" id="formGroupStatus">
                            <label>Status <span class="mandatory">*</span></label>
                            <select class="form-control" id="ddlStatus">
                                <option value="-1">Select</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>
                            <span id="errStatus"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 mt-3">
                        <button id="btnReload" class="btn btn-primary">Refresh</button>
                    </div>
                    <div class="col-6 mt-3">
                        <button id="btnSubmit" class="btn btn-primary float-right">Submit</button>

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-3">
                        <p id="msg"></p>
                    </div>
                </div>


            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="~/js/program/manageprogram.js"></script>
<!--End modal for action hisotry-->

